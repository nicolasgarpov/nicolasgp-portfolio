              </text>
            </g>

            <!-- Contenedor para la dona ASCII 3D -->
            <foreignObject x="100" y="100" width="300" height="300">
              <div
                id="ascii-donut"
                style="
      font-family: 'Courier New', monospace;
      font-size: 0.5em;
      line-height: 1;
      white-space: pre;
      color: rgb(0, 51, 255);
      width: 300px;
      height: 300px;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      overflow: hidden;
    "
              >
              </div>
            </foreignObject>
          </svg>

          <script>
            window.onload = () => {
              const pre = document.getElementById("ascii-donut");

              if (!pre) {
                console.error(
                  "El elemento con id 'ascii-donut' no fue encontrado."
                );
                return;
              }

              const WIDTH = 60;
              const HEIGHT = 30;
              let z = 0,
                y = 0;

              function updateDonut() {
                z += 0.07;
                y += 0.03;
                const a = new Array(HEIGHT * WIDTH).fill(" ");
                const r = new Array(HEIGHT * WIDTH).fill(0);
                const t = Math.cos(z);
                const e = Math.sin(z);
                const n = Math.cos(y);
                const o = Math.sin(y);

                for (let s = 0; s < 6.28; s += 0.07) {
                  const c = Math.cos(s);
                  const h = Math.sin(s);
                  for (let s2 = 0; s2 < 6.28; s2 += 0.02) {
                    const v = Math.sin(s2);
                    const M = Math.cos(s2);
                    const i = c + 2;
                    const l = 1 / (v * i * e + h * t + 5);
                    const p = v * i * t - h * e;
                    const d = Math.floor(
                      WIDTH / 2 + (WIDTH / 4) * l * (M * i * n - p * o)
                    );
                    const m = Math.floor(
                      HEIGHT / 2 + (HEIGHT / 4) * l * (M * i * o + p * n)
                    );
                    const f = Math.floor(
                      8 *
                        ((h * e - v * c * t) * n -
                          v * c * e -
                          h * t -
                          M * c * o)
                    );
                    const y = d + WIDTH * m;
                    if (
                      m < HEIGHT &&
                      m >= 0 &&
                      d >= 0 &&
                      d < WIDTH &&
                      l > r[y]
                    ) {
                      r[y] = l;
                      a[y] = ".,-~:;=!*#$@"[f > 0 ? f : 0];
                    }
                  }
                }

                let output = "";
                for (let i = 0; i < HEIGHT; i++) {
                  output += a.slice(i * WIDTH, (i + 1) * WIDTH).join("") + "\n";
                }

                // AquÃ­ le decimos a TypeScript que sabemos que 'pre' no es nulo
                (pre as HTMLElement).textContent = output;
              }

              // Actualizar la dona cada 50ms
              setInterval(updateDonut, 50);
            };
          </script>
